@model OBilet.CaseStudy.JourneyModel
@{
	ViewBag.Title = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";

	}

<link href="~/Content/journey.css" rel="stylesheet" />
<link href="~/Content/index.css" rel="stylesheet" />

<div class="card ">
	<div class="card-header journeyheader">
		<div class="container">
			<a href="@Url.Action("Index", "Home")" class="arrowicon">
				<svg width="2em" height="2em" viewBox="0 0 16 16" class="bi bi-arrow-left" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
					<path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
				</svg>
			</a>
			<label class="centertext">
				<b>
					@Model.originLocation - @Model.destinationLocation<br />
					@Model.departureDate.ToShortDateString()
				</b>
			</label>
		</div>
	</div>
	<div class="card-body">
		@foreach (var item in Model.busJourneyDatas)
		{
		<a class="journeydetail" href="">
			<div class="container containersize">
				<div class="childrendiv">
					<img src="https://s3.eu-central-1.amazonaws.com/static.obilet.com/images/partner/@item.PartnerId-sm.png" width="150" />

					<div class="row">

						<div class="col-xs-6 col-md-1 color">
							<i>Kalkış</i><br />
							<b>@string.Format("{0:HH:mm}", item.Journey.Departure)</b>
						</div>
						<div class="col-xs-6 col-md-1 color">
							<svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-arrow-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
								<path fill-rule="evenodd" d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z" />
							</svg>
						</div>
						<div class="col-xs-6 col-md-1 color">
							<i>Varış</i><br />
							<b>@string.Format("{0:HH:mm}", item.Journey.Arrival)</b>
						</div>
						<div class="col-xs-6 col-md-9 color">
							<button type="button" class="buttonprop">@item.Journey.InternetPrice @item.Journey.Currency</button>
						</div>
					</div>
					<div class="row">
						<div class="col-xs-12 col-md-12 color">
							<p style="float:left">@item.Journey.Origin - @item.Journey.Destination</p>
							@Html.Hidden("SessionInfo", item.Id)
						</div>
					</div>
				</div>
			</div>
			<br />
		</a>}
	</div>
</div>
